                <p className="text-2xl font-bold text-green-400">{dashboardStats.incidents?.active || 0}</p>
                <p className="text-xs text-green-500 mt-1">Enhanced Resolution</p>
              </div>
              <AlertTriangle className="w-8 h-8 text-green-400" />
